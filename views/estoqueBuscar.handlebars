                <script>
                    // Fun√ß√£o para atualizar o cabe√ßalho da tabela com base no tipo de cadastro
                    function atualizarTabelaCabe√ßalho(tipo) {
                        const tabelaCabecalho = document.getElementById('tabelaCabecalho');

                        if (tipo === 'estoque') {
                            tabelaCabecalho.innerHTML = `
                <tr>
                    <th>C√≥digo</th>
                    <th>Estoque</th>
                    <th>Planta</th>
                    <th>Quantidade Dispon√≠vel (Kg)</th>
                    <th>Capacidade M√°xima (Kg)</th>
                </tr>
            `;
                        } else if (tipo === 'material') {
                            tabelaCabecalho.innerHTML = `
                <tr>
                    <th>C√≥digo</th>
                    <th>Material</th>
                    <th>Valor por KG</th>
                    <th>Quantidade (KG)</th>
                    <th>Estoque</th>
                    <th>Planta</th>
                </tr>
            `;
                        }
                    }

                    // Evento de troca de tipo de cadastro
                    document.getElementById('tipoCadastro').addEventListener('change', function () {
                        atualizarTabelaCabe√ßalho(this.value);
                        atualizarCamposCadastro(this.value); // Atualiza os campos de entrada conforme o tipo de cadastro
                    });

                    // Inicializar com o tipo selecionado ao carregar
                    window.addEventListener('DOMContentLoaded', () => {
                        const tipoSelecionado = document.getElementById('tipoCadastro').value;
                        atualizarTabelaCabe√ßalho(tipoSelecionado);
                        atualizarCamposCadastro(tipoSelecionado);
                    });

                    // Fun√ß√£o para atualizar os campos de entrada com base no tipo de cadastro
                    function atualizarCamposCadastro(tipo) {
                        const campoEstoque = document.getElementById('campoEstoqueArmazenado');
                        const campoPlanta = document.getElementById('campoPlantaCadastrada');

                        if (tipo === 'material') {
                            campoEstoque.style.display = 'block';
                            campoPlanta.style.display = 'none';
                        } else {
                            campoEstoque.style.display = 'none';
                            campoPlanta.style.display = 'block';
                        }
                    }

                    // üöÄ Fun√ß√£o de busca ao clicar no bot√£o
                    document.getElementById('btnBuscar').addEventListener('click', async () => {
                        const tipo = document.getElementById('tipoCadastro').value;
                        const codigo = document.getElementById('codigoCadastro').value;
                        const nome = document.getElementById('nomeCadastro').value;
                        const estoque = document.getElementById('estoqueCadastro').value;
                        const planta = document.getElementById('plantaCadastro').value;

                        const filtros = { tipoCadastro: tipo };

                        // Construindo filtros de acordo com o tipo de cadastro
                        if (tipo === 'estoque') {
                            if (codigo) filtros.codigoCadastro = codigo;
                            if (nome) filtros.nomeCadastro = nome;
                            if (planta) filtros.plantaCadastro = planta;
                        } else if (tipo === 'material') {
                            if (codigo) filtros.codigoCadastro = codigo;
                            if (nome) filtros.nomeCadastro = nome;
                            if (estoque) filtros.estoqueCadastro = estoque;
                        }

                        console.log("üîç Filtros enviados:", filtros); // Log para depura√ß√£o

                        try {
                            const resposta = await fetch('/estoquebuscar', {
                                method: 'POST',
                                headers: { 'Content-Type': 'application/json' },
                                body: JSON.stringify(filtros)
                            });

                            const dados = await resposta.json();
                            console.log("üì¶ Dados recebidos do back-end:", dados); // Log para ver o retorno

                            const tbody = document.querySelector('table tbody');
                            tbody.innerHTML = ''; // Limpa a tabela antes de adicionar os novos dados

                            if (!Array.isArray(dados) || dados.length === 0) {
                                tbody.innerHTML = '<tr><td colspan="7" class="text-center text-muted">Nenhum cadastro encontrado</td></tr>';
                                return;
                            }

                            dados.forEach(item => {
                                if (tipo === 'estoque') {
                                    // Para "estoque", usamos os campos espec√≠ficos de estoque
                                    tbody.innerHTML += `
                        <tr>
                            <td>${item.cd_estoque}</td>
                            <td>${item.nm_estoque}</td>
                            <td>${item.nm_planta}</td>
                            <td>${item.qt_disponivel}</td>
                            <td>${item.qt_capacidade_maxima}</td>
                        </tr>
                    `;
                                } else if (tipo === 'material') {
                                    // Para "material", usamos os campos espec√≠ficos de material
                                    tbody.innerHTML += `
                        <tr>
                            <td>${item.cd_material}</td>
                            <td>${item.ds_material}</td>
                            <td>${item.vl_valor_por_kg}</td>
                            <td>${item.qt_peso}</td>
                            <td>${item.nm_estoque}</td>
                            <td>${item.nm_planta}</td>
                        </tr>
                    `;
                                }
                            });
                        } catch (erro) {
                            console.error('‚ùå Erro ao buscar:', erro);
                            alert('Erro ao buscar os dados.');
                        }
                    });

                    // Fun√ß√£o para limpar filtros
                    document.getElementById('limparBtn').addEventListener('click', () => {
                        // Limpa os campos de filtro
                        document.getElementById('codigoCadastro').value = '';
                        document.getElementById('nomeCadastro').value = '';
                        document.getElementById('estoqueCadastro').value = '';
                        document.getElementById('plantaCadastro').value = '';

                        // Opcional: redefine o tipo de cadastro para o primeiro da lista
                        document.getElementById('tipoCadastro').selectedIndex = 0;

                        // Limpa os resultados da tabela
                        const tbody = document.querySelector('table tbody');
                        tbody.innerHTML = '<tr><td colspan="7" class="text-center text-muted">Nenhum cadastro encontrado</td></tr>';
                    });

                    // Evento de troca de tipo de cadastro
                    document.getElementById('tipoCadastro').addEventListener('change', function () {
                        atualizarTabelaCabe√ßalho(this.value);
                        atualizarCamposCadastro(this.value); // Atualiza os campos de entrada conforme o tipo de cadastro

                        // Limpa os resultados da tabela ao trocar o tipo de cadastro
                        const tbody = document.querySelector('table tbody');
                        tbody.innerHTML = '<tr><td colspan="7" class="text-center text-muted">Nenhum cadastro encontrado</td></tr>'

                        // Limpa os filtros
                        document.getElementById('codigoCadastro').value = '';
                        document.getElementById('nomeCadastro').value = '';
                        document.getElementById('estoqueCadastro').value = '';
                        document.getElementById('plantaCadastro').value = '';
                    });

                </script>
