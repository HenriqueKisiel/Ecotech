            <script>
                $(document).ready(function () {
                    $(".btn-danger").click(function (e) {
                        e.preventDefault(); // Impede o comportamento padrão do botão (submit do formulário)

                        const codigoPessoaFisica = $(this).closest('form').find('input[name="codigo"]').val();

                        swal({
                            title: "Tem certeza?",
                            text: "Você não poderá reverter isso!",
                            icon: "warning",
                            buttons: {
                                cancel: {
                                    text: "Não, cancelar!",
                                    visible: true,
                                    className: "btn btn-danger",
                                },
                                confirm: {
                                    text: "Sim, excluir!",
                                    className: "btn btn-success",
                                },
                            },
                        }).then((willDelete) => {
                            if (willDelete) {
                                // Envia a requisição POST para o servidor para desativar a pessoa física
                                $.ajax({
                                    url: '/pessoaExcluir',
                                    method: 'POST',
                                    dataType: 'json',
                                    data: { codigo: codigoPessoaFisica },
                                    success: function (data) {
                                        if (data.success) {
                                            swal("Desativado!", "O registro foi desativado com sucesso!", {
                                                icon: "success",
                                                buttons: {
                                                    confirm: {
                                                        className: "btn btn-success",
                                                    },
                                                },
                                            }).then(() => {
                                                // redireciona no ok
                                                window.location.href = '/cadastros';
                                            });
                                        } else {
                                            swal("Erro!", data.message || "Ocorreu um erro ao desativar o registro.", {
                                                icon: "error",
                                                buttons: {
                                                    confirm: {
                                                        className: "btn btn-danger",
                                                    },
                                                },
                                            });
                                        }
                                    },
                                    error: function (error) {
                                        console.error("Erro ao enviar requisição de exclusão:", error);
                                        swal("Erro!", "Ocorreu um erro ao tentar desativar o registro.", {
                                            icon: "error",
                                            buttons: {
                                                confirm: {
                                                    className: "btn btn-danger",
                                                },
                                            },
                                        });
                                    }
                                });
                            } else {
                                swal("Cancelado!", "O registro permanece ativo!", {
                                    icon: "info",
                                    buttons: {
                                        confirm: {
                                            className: "btn btn-success",
                                        },
                                    },
                                });
                            }
                        });
                    });
                });
            </script>
