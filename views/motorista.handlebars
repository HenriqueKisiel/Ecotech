                                            <label class="fw-bold">Selecione a Pessoa Física</label><br>
                                            <select class="form-select form-control" name="cd_pessoa_fisica" required>
                                                <option value="">Selecione</option>
                                                {{#each pessoasFisicas}}
                                                <option value="{{cd_pessoa_fisica}}">{{nm_pessoa_fisica}}</option>
                                                {{/each}}
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="fw-bold">Número da CNH</label>
                                            <input maxlength="11" minlength="11" type="text" name="nrCnh"
                                                class="form-control" placeholder="Insira o número" required
                                                pattern="\d{11}" title="A CNH deve conter exatamente 11 números">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="fw-bold">Categoria CNH</label><br>
                                            <select name="categoria_cnh" class="form-select form-control" required>
                                                <option value="" disabled selected>Selecione a categoria</option>
                                                <option value="A">A</option>
                                                <option value="B">B</option>
                                                <option value="C">C</option>
                                                <option value="D">D</option>
                                                <option value="E">E</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="fw-bold">Data de Vencimento</label>
                                            <input type="date" name="dataVenc" class="form-control" id="dataVenc"
                                                required>
                                        </div>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-end mt-3">
                                    <a href="/cadastrosBuscar"
                                        class="btn btn-secondary shadow-lg fs-6 fw-bold me-3">Voltar</a>
                                    <button type="submit" class="btn btn-success shadow-lg fs-6 fw-bold">Salvar</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <script>
                document.addEventListener('DOMContentLoaded', function () {
                    const dataInput = document.getElementById('dataVenc');
                    if (dataInput) {
                        const hoje = new Date();
                        const yyyy = hoje.getFullYear();
                        const mm = String(hoje.getMonth() + 1).padStart(2, '0');
                        const dd = String(hoje.getDate()).padStart(2, '0');
                        const minDate = `${yyyy}-${mm}-${dd}`;
                        dataInput.setAttribute('min', minDate);
                    }

                    // Validação CNH: só números e máximo 11 dígitos
                    const cnhInput = document.querySelector('input[name="nrCnh"]');
                    if (cnhInput) {
                        cnhInput.addEventListener('input', function () {
                            this.value = this.value.replace(/\D/g, '').slice(0, 11);
                        });
                    }
                });
            </script>


