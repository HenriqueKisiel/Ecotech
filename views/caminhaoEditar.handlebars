                            <div class="card-title">
                                <span class="fs-2 fw-bold"></span>
                            </div>
                        </div>
                        <div class="card-body">
                            <form id="formCaminhao" action="/caminhaoEditar" method="POST">
                            <input type="hidden" name="id_caminhao" value="{{caminhao.id_caminhao}}">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="fw-bold">Modelo</label>
                                            <input type="text" name="nm_modelo" class="form-control"
                                                value="{{caminhao.nm_modelo}}">
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="fw-bold">Tipo Atual</label>
                                            <input type="text" name="tipo_atual" class="form-control"
                                                value={{caminhao.tipo}} readonly>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="fw-bold">Tipo</label><br>
                                            <select class="form-select form-control" name="tipo">
                                                <option value={{caminhao.tipo}}></option>
                                                <option value="VUC">VUC</option>
                                                <option value="TRUCK">TRUCK</option>
                                                <option value="SIDER">SIDER</option>
                                                <option value="FURGAO">FURGAO</option>
                                                <option value="HR">HR</option>
                                                <option value="TOCO">TOCO</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="fw-bold">Placa</label>
                                            <input maxlength="50" type="text" name="placa" class="form-control"
                                                placeholder="Informe o Placa" value={{caminhao.placa}} readonly>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="fw-bold">Ano Fabricação</label>
                                            <input maxlength="50" type="text" name="ano_fabricacao" class="form-control"
                                                placeholder="Informe o Placa" value={{caminhao.ano_fabricacao}}>
                                        </div>
                                    </div>

                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="fw-bold">Capacidade (Kg)</label>
                                            <input maxlength="50" type="number" name="capacidade_kg"
                                                class="form-control" placeholder="Informe a capacidade"
                                                value={{caminhao.capacidade_kg}}>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="fw-bold">Capacidade em Volume (m³)</label>
                                            <input maxlength="50" type="numeber" name="capacidade_volume"
                                                class="form-control" placeholder="Informe a capacidade"
                                                value={{caminhao.capacidade_volume}}>
                                        </div>
                                    </div>
                                    <div class="col-md-6 d-flex align-items-end">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="situacao"
                                                name="situacao" value="A" {{#if (eq caminhao.situacao "A"
                                                )}}checked{{/if}}>
