                        <!-- Scripts -->
                        <script>
                            document.addEventListener('DOMContentLoaded', function () {
                                const tipoCadastro = document.getElementById('defaultSelect');
                                const cpfField = document.getElementById('cpfField');
                                const cnpjField = document.getElementById('cnpjField');
                                const limparBtn = document.getElementById('limparBtn');
                                const form = document.getElementById('filtroForm');
                                const editarLinks = document.querySelectorAll('.btn-editar');

                                function updateFields() {
                                    const selected = tipoCadastro.value;
                                    cpfField.style.display = 'none';
                                    cnpjField.style.display = 'none';

                                    if (selected === 'Pessoa' || selected === 'Usuário') {
                                        cpfField.style.display = 'block';
                                    } else if (selected === 'Fornecedor ou Pessoa Jurídica' || selected === 'Planta de Reciclagem') {
                                        cnpjField.style.display = 'block';
                                    }
                                }

                                function atualizarLinksEditar() {
                                    const tipo = tipoCadastro.value;
                                    let rota = '/editar';

                                    switch (tipo) {
                                        case 'Pessoa':
                                            rota = '/pessoa';
                                            break;
                                        case 'Usuário':
                                            rota = '/usuarioEditar';
                                            break;
                                        case 'Fornecedor ou Pessoa Jurídica':
                                            rota = '/juridica';
                                            break;
                                        case 'Planta de Reciclagem':
                                            rota = '/planta';
                                            break;
                                    }

                                    editarLinks.forEach(link => {
                                        const codigo = link.getAttribute('data-codigo');
                                        link.setAttribute('href', `${rota}/${codigo}`);
                                    });
                                }

                                tipoCadastro.addEventListener('change', () => {
                                    updateFields();
                                    atualizarLinksEditar();
                                });

                                limparBtn.addEventListener('click', () => {
                                    form.reset();
                                    updateFields();
                                    atualizarLinksEditar();
                                });

                                updateFields();
                                atualizarLinksEditar();
                            });
                        </script>

