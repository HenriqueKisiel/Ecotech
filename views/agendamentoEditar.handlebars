                        <!-- ===== Formulário de Edição de Agendamento ===== -->
                        <form action="/agendamentoEditar/{{agendamento.cd_agendamento}}" method="POST">
                            <div
                                class="d-flex flex-column flex-md-row justify-content-md-between align-items-center mb-3">
                                <div class="mb-3 d-flex flex-column">
                                    <span class="fs-2 fw-bold">Editar agendamento de Coleta</span>
                                    <small class="text-muted">Realize o agendamento programado da coleta.</small>
                                </div>
                            </div>
                            <div class="card shadow-lg mb-5">
                                <div class="card-body">
                                    <input type="hidden" name="id_agendamento" value="{{agendamento.cd_agendamento}}">

                                    <div class="row">
                                        <!-- Pessoa Física -->
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="fw-bold">Nome Pessoa Física</label>
                                                <select class="form-control" name="cd_pessoa_fisica">
                                                    <option value="">Selecione uma pessoa física</option>
                                                    {{#each pessoasFisicas}}
                                                    <option value="{{this.cd_pessoa_fisica}}" {{#if (eq
                                                        this.cd_pessoa_fisica
                                                        ../agendamento.cd_pessoa_fisica)}}selected{{/if}}>
                                                        {{this.nm_pessoa_fisica}}
                                                    </option>
                                                    {{/each}}
                                                </select>
                                            </div>
                                        </div>

                                        <!-- Pessoa Jurídica -->
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="fw-bold">Nome Fantasia (Pessoa Jurídica)</label>
                                                <select class="form-control" name="cd_pessoa_juridica">
                                                    <option value="">Selecione uma pessoa jurídica</option>
                                                    {{#each pessoasJuridicas}}
                                                    <option value="{{this.cd_pessoa_juridica}}" {{#if (eq
                                                        this.cd_pessoa_juridica
                                                        ../agendamento.cd_pessoa_juridica)}}selected{{/if}}>
                                                        {{this.nm_fantasia}}
                                                    </option>
                                                    {{/each}}
                                                </select>
                                            </div>
                                        </div>

                                        <!-- Endereço -->
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="fw-bold">Endereço</label>
                                                <input type="text" class="form-control" name="endereco"
                                                    value="{{agendamento.ds_endereco}}">
                                            </div>
                                        </div>

                                        <!-- Cidade / Bairro -->
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="fw-bold">Cidade</label>
                                                <input type="text" class="form-control" readonly
                                                    value="{{agendamento.nm_cidade}}">
                                                <input type="hidden" name="cd_cidade" value="{{agendamento.cd_cidade}}">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="fw-bold">Bairro</label>
                                                <input type="text" class="form-control" readonly
                                                    value="{{agendamento.nm_bairro}}">
                                                <input type="hidden" name="cd_bairro" value="{{agendamento.cd_bairro}}">
                                            </div>
                                        </div>

                                        <!-- Data Solicitada / Peso Previsto -->
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="fw-bold">Data Solicitada</label>
                                                <input type="text" class="form-control" readonly name="dt_solicitada"
                                                    value="{{agendamento.dt_solicitada}}">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="fw-bold">Peso previsto (KG)</label>
                                                <input type="text" class="form-control" readonly name="peso_previsto"
                                                    value="{{agendamento.qt_quantidade_prevista_kg}}">
                                            </div>
                                        </div>

                                        <!-- Status -->
                                        <div class="col-md-6">
                                            <div class="form-group form-check mt-4">
                                                <input type="hidden" name="status" value="cancelado">
                                                <input type="checkbox" class="form-check-input" id="status_checkbox"
                                                    name="status" value="ativo" {{#if (eq agendamento.status "ativo"
                                                    )}}checked{{/if}}>
                                                <label class="form-check-label fw-bold"
                                                    for="status_checkbox">Agendamento Ativo</label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="d-flex justify-content-end">
                                        <a href="/agendamento" class="btn btn-secondary me-3 shadow-lg">Voltar</a>
                                        <button type="submit" class="btn btn-success shadow-lg">Salvar</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <!-- ===== Fim do form de Agendamento ===== -->


                        <div class="row">
                            <!-- ===== Formulário de Inserção/Edição de Itens ===== -->
                            <div class="col-md-6">
                                <div class="card shadow-lg mb-5">
                                    <div class="card-header">
                                        <div class="card-title">{{#if editandoItem}}Editar Item{{else}}Adicionar
                                            Item{{/if}}</div>
                                    </div>
                                    <div class="card-body">
                                        <form action="/agendamentoEditar/{{agendamento.cd_agendamento}}/adicionarItem"
                                            method="POST">
                                            {{!-- Se estiver editando, você precisaria de outra rota
                                            /:id_agendamento/itens/:itemId/editar --}}
                                            <input type="hidden" name="itemId"
                                                value="{{#if editandoItem}}{{item.cd_mat_agenda}}{{/if}}" />

                                            <div class="row">
                                                <div class="col-md-6">
                                                    <label class="fw-bold">Nome do material</label>
                                                    <input type="text" class="form-control" name="item_nome"
                                                        value="{{item.ds_mat_agenda}}" required>
                                                </div>
                                                <div class="col-md-6">
                                                    <label class="fw-bold">Linha do material</label>
                                                    <input type="text" class="form-control" name="linha_material"
                                                        value="{{item.ie_linha}}" required>
                                                </div>
                                                <div class="col-md-6">
                                                    <label class="fw-bold">Peso do material (KG)</label>
                                                    <input type="number" step="0.01" class="form-control"
                                                        name="item_peso" value="{{item.qt_peso_material_total_kg}}"
                                                        required>
                                                </div>
                                            </div>

                                            <div class="d-flex justify-content-end gap-2 mt-3">
                                                {{#if editandoItem}}
                                                <a href="/agendamentoEditar/{{agendamento.cd_agendamento}}"
                                                    class="btn btn-secondary">Cancelar</a>
                                                <button
                                                    formaction="/agendamentoEditar/{{agendamento.cd_agendamento}}/itens/{{item.cd_mat_agenda}}/editar"
                                                    class="btn btn-warning">Atualizar Item</button>
                                                {{else}}
                                                <button type="submit" class="btn btn-success">Adicionar Item</button>
                                                {{/if}}
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>

                            <!-- ===== Lista de Itens ===== -->
                            <div class="col-md-6">
                                <div class="card shadow-lg mb-5">
                                    <div class="card-header">
                                        <div class="card-title">Lista de Itens</div>
                                    </div>
                                    <div class="card-body p-0">
                                        <table class="table table-striped table-hover mt-4">
                                            <thead>
                                                <tr>
                                                    <th>Material</th>
                                                    <th>Linha</th>
                                                    <th>Peso</th>
                                                    <th>Ações</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {{#each itens}}
                                                <tr>
                                                    <td>{{ds_mat_agenda}}</td>
                                                    <td>{{ie_linha}}</td>
                                                    <td>{{qt_peso_material_total_kg}}</td>
                                                    <td>
                                                        <a href="/agendamentoEditar/{{../agendamento.cd_agendamento}}/itens/{{cd_mat_agenda}}/excluir"
                                                            class="btn btn-danger btn-sm"
                                                            onclick="return confirm('Excluir?');">
                                                            <i class="fa fa-trash"></i>
                                                        </a>
                                                        <a href="/agendamentoEditar/{{../agendamento.cd_agendamento}}/itens/{{cd_mat_agenda}}/editar"
                                                            class="btn btn-warning btn-sm">
                                                            <i class="fa fa-edit"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                                {{/each}}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <!--End conteudo indiviudual da pagina-->
            </div>
        </div>
        <!--start modal-->
        <div class="modal fade" id="excluir" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered p-5">
                <div class="modal-content">
                    <div class="modal-body">
                        <div class="d-flex justify-content-center text-center flex-column">
