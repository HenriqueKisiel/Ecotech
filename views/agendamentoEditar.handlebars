                        <!-- Formulário de Edição -->
                        <form action="/agendamentoEditar" method="POST">

                            <div
                                class="d-flex flex-column flex-md-row justify-content-md-between align-items-center mb-3">
                                <div class="mb-3 d-flex flex-column">
                                    <span class="fs-2 fw-bold">Editar agendamento de Coleta</span>
                                    <small class="text-muted">Realize o agendamento programado da coleta.</small>
                                </div>
                                <div>
                                    <a href="/agendamento" class="btn btn-secondary me-3 shadow-lg">Voltar</a>
                                </div>
                            </div>

                            <!-- Formulário de Edição -->
                            <div class="card shadow-lg mb-5">
                                <div class="card-body">
                                    <div class="row">
                                        <input type="hidden" name="id_agendamento"
                                            value="{{agendamento.cd_agendamento}}">

                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="fw-bold">Nome Pessoa Física</label>
                                                <input type="text" class="form-control" name="nome_pessoa_fisica"
                                                    placeholder="Nome Pessoa Física"
                                                    value="{{agendamento.nm_pessoa_fisica}}">
                                                <input type="hidden" name="cd_pessoa_fisica"
                                                    value="{{agendamento.cd_pessoa_fisica}}">
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="fw-bold">Nome Fantasia (Pessoa Jurídica)</label>
                                                <input type="text" class="form-control" name="nome_fantasia"
                                                    placeholder="Nome Fantasia"
                                                    value="{{agendamento.nm_pessoa_juridica_fantasia}}">
                                                <input type="hidden" name="cd_pessoa_juridica"
                                                    value="{{agendamento.cd_pessoa_juridica}}">
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="fw-bold">Endereço</label>
                                                <input type="text" class="form-control" name="endereco"
                                                    placeholder="Informe o endereço"
                                                    value="{{agendamento.ds_endereco}}">
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="fw-bold">Cidade</label>
                                                <input type="text" class="form-control"
                                                    value="{{agendamento.nm_cidade}}">
                                                <input type="hidden" name="cd_cidade" value="{{agendamento.cd_cidade}}">
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="fw-bold">Bairro</label>
                                                <input type="text" class="form-control"
                                                    value="{{agendamento.nm_bairro}}">
                                                <input type="hidden" name="cd_bairro" value="{{agendamento.cd_bairro}}">
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="fw-bold">Última Atualização</label>
                                                <input type="text" name="dt_solicitada"
                                                    value="{{agendamento.dt_solicitada}}" class="form-control" readonly>
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="fw-bold">Peso previsto (KG)</label>
                                                <input type="text" class="form-control" name="peso_previsto"
                                                    placeholder="___" value="{{agendamento.qt_quantidade_prevista_kg}}">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="d-flex justify-content-end flex-wrap">
                                        <button type="submit" class="btn btn-success shadow-lg">Salvar</button>
                                    </div>
                                </div>
                            </div>

                        </form>

                        <!-- Formulário para Inserir/Editar Itens -->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="card shadow-lg mb-5">
                                    <div class="card-header">
                                        <div class="card-title">
                                            {{#if editandoItem}}Editar Item{{else}}Adicionar Item{{/if}}
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <form
                                            action="{{#if editandoItem}}/agendamentoEditar/{{agendamento.cd_agendamento}}/itens/{{item.cd_mat_agenda}}/editar{{else}}/agendamentoEditar/{{agendamento.cd_agendamento}}/adicionarItem{{/if}}"
                                            method="POST">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="fw-bold">Nome do material</label>
                                                        <input type="text" class="form-control" name="item_nome"
                                                            placeholder="Informe o nome do material"
                                                            value="{{item.ds_mat_agenda}}">
                                                    </div>
                                                </div>

                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="fw-bold">Linha do material</label>
                                                        <input type="text" class="form-control" name="linha_material"
                                                            placeholder="Informe a linha do material"
                                                            value="{{item.ie_linha}}">
                                                    </div>
                                                </div>

                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="fw-bold">Peso do material (KG)</label>
                                                        <input type="number" step="0.01" class="form-control"
                                                            name="item_peso" placeholder="Informe o peso do material"
                                                            value="{{item.qt_peso_material_total_kg}}">
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="d-flex justify-content-end flex-wrap gap-2">
                                                {{#if editandoItem}}
                                                <a href="/agendamentoEditar/{{agendamento.cd_agendamento}}"
                                                    class="btn btn-secondary shadow-lg">Cancelar</a>
                                                {{/if}}
                                                <button type="submit" class="btn btn-success shadow-lg">
                                                    {{#if editandoItem}}Atualizar Item{{else}}Adicionar Item{{/if}}
                                                </button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>

                            <!-- Lista de Itens -->
                            <div class="col-md-6">
                                <div class="card shadow-lg mb-5">
                                    <div class="card-header">
                                        <div class="card-title">Lista de Itens</div>
                                    </div>
                                    <div class="card-body p-0">
                                        <table class="table table-head-bg-success">
                                            <thead>
                                                <tr>
                                                    <th scope="col">Material</th>
                                                    <th scope="col">Linha</th>
                                                    <th scope="col">Peso</th>
                                                    <th scope="col">Ações</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {{#each itens}}
                                                <tr>
                                                    <td>{{ds_mat_agenda}}</td>
                                                    <td>{{ie_linha}}</td>
                                                    <td>{{qt_peso_material_total_kg}}</td>
                                                    <td>
                                                        <a href="/agendamentoEditar/{{../agendamento.cd_agendamento}}/itens/{{cd_mat_agenda}}/excluir"
                                                            class="btn btn-danger me-2"
                                                            onclick="return confirm('Tem certeza que deseja excluir este item?');">
                                                            <i class="fa fa-trash"></i> Excluir
                                                        </a>
                                                        <a href="/agendamentoEditar/{{../agendamento.cd_agendamento}}/itens/{{cd_mat_agenda}}/editar"
                                                            class="btn btn-warning">
                                                            <i class="fa fa-edit"></i> Editar
                                                        </a>
                                                    </td>
                                                </tr>
                                                {{/each}}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

