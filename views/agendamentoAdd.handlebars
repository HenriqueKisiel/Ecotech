                <script>
                    $(document).ready(function () {
                        // Pessoa Física
                        $('#pessoa_fisica_input').on('input', function () {
                            const termo = $(this).val();
                            $('#cd_pessoa_fisica').val(''); // Limpa o hidden

                            if (termo.length < 2) {
                                $('#lista_pessoas_fisicas').hide();
                                return;
                            }

                            $.ajax({
                                url: '/pessoas-fisicas-busca?term=' + encodeURIComponent(termo),
                                method: 'GET',
                                success: function (data) {
                                    if (data.length === 0) {
                                        $('#lista_pessoas_fisicas').hide();
                                        return;
                                    }

                                    let lista = '';
                                    data.forEach(function (item) {
                                        lista += `<a href="#" class="dropdown-item" data-id="${item.cd_pessoa_fisica}">${item.nm_pessoa_fisica}</a>`;
                                    });

                                    $('#lista_pessoas_fisicas').html(lista).show();
                                },
                                error: function () {
                                    $('#lista_pessoas_fisicas').hide();
                                }
                            });
                        });

                        $('#lista_pessoas_fisicas').on('click', 'a', function (e) {
                            e.preventDefault();
                            const nome = $(this).text();
                            const id = $(this).data('id');
                            $('#pessoa_fisica_input').val(nome);
                            $('#cd_pessoa_fisica').val(id);
                            $('#lista_pessoas_fisicas').hide();
                        });

                        // Pessoa Jurídica
                        $('#pessoa_juridica_input').on('input', function () {
                            const termo = $(this).val();
                            $('#cd_pessoa_juridica').val(''); // Limpa o hidden

                            if (termo.length < 2) {
                                $('#lista_pessoas_juridicas').hide();
                                return;
                            }

                            $.ajax({
                                url: '/pessoas-juridicas-busca?term=' + encodeURIComponent(termo),
                                method: 'GET',
                                success: function (data) {
                                    if (data.length === 0) {
                                        $('#lista_pessoas_juridicas').hide();
                                        return;
                                    }

                                    let lista = '';
                                    data.forEach(function (item) {
                                        lista += `<a href="#" class="dropdown-item" data-id="${item.cd_pessoa_juridica}">${item.nm_fantasia}</a>`;
                                    });

                                    $('#lista_pessoas_juridicas').html(lista).show();
                                },
                                error: function () {
                                    $('#lista_pessoas_juridicas').hide();
                                }
                            });
                        });

                        $('#lista_pessoas_juridicas').on('click', 'a', function (e) {
                            e.preventDefault();
                            const nome = $(this).text();
                            const id = $(this).data('id');
                            $('#pessoa_juridica_input').val(nome);
                            $('#cd_pessoa_juridica').val(id);
                            $('#lista_pessoas_juridicas').hide();
                        });

                        // Fecha as listas ao clicar fora
                        $(document).click(function (e) {
                            if (!$(e.target).closest('#pessoa_fisica_input, #lista_pessoas_fisicas').length) {
                                $('#lista_pessoas_fisicas').hide();
                            }
                            if (!$(e.target).closest('#pessoa_juridica_input, #lista_pessoas_juridicas').length) {
                                $('#lista_pessoas_juridicas').hide();
                            }
                        });
                    });
                </script>


                <!-- Script de máscara para CEP -->
                <script>
                    document.addEventListener('DOMContentLoaded', function () {
                        const cepInput = document.getElementById('cep');
                        const form = document.querySelector('form');

                        cepInput.addEventListener('input', function (e) {
                            let cep = e.target.value.replace(/\D/g, '');
                            if (cep.length > 5) {
                                cep = cep.slice(0, 5) + '-' + cep.slice(5, 8);
                            }
                            e.target.value = cep;
                        });

                        form.addEventListener('submit', function () {
                            cepInput.value = cepInput.value.replace(/\D/g, '');
                        });
                    });
                </script>
                <script>
                    document.getElementById('qt_quantidade_prevista_kg').addEventListener('input', function (e) {
                        let value = this.value;

                        // Substitui vírgula por ponto para normalizar temporariamente
                        value = value.replace(',', '.');

                        // Remove tudo que não for número ou ponto
                        value = value.replace(/[^0-9.]/g, '');

                        // Garante que só tenha um ponto decimal
                        const parts = value.split('.');
                        if (parts.length > 2) {
                            value = parts[0] + '.' + parts[1];
                        }

                        // Atualiza o valor no campo (com vírgula se usuário digitou vírgula antes)
                        this.value = value.replace('.', ',');
                    });
                </script>

                <script>// Função para buscar o endereço via API ViaCEP ao perder o foco
                    const cepInput = document.getElementById('nr_cep');
                    cepInput.addEventListener('blur', function () {
                        const rawCep = this.value.replace(/\D/g, '');
                        if (rawCep.length !== 8) return;

                        fetch(`https://viacep.com.br/ws/${rawCep}/json/`)
                            .then(response => response.json())
                            .then(data => {
                                if (data.erro) {
                                    alert('CEP não encontrado.');
                                    return;
                                }
                                document.getElementById('uf_estado').value = data.uf || '';
                                document.getElementById('nm_cidade').value = data.localidade || '';
                                document.getElementById('nm_bairro').value = data.bairro || '';
                                document.getElementById('ds_endereco').value = data.logradouro || '';
                            })
                            .catch(error => {
                                console.error('Erro na consulta do CEP:', error);
                                alert('Erro ao buscar informações do CEP.');
                            });
                    });
                </script>

                <script>
                    document.addEventListener('DOMContentLoaded', function () {
                        const nrEndereco = document.querySelector('[name="nr_endereco"]');
                        nrEndereco.addEventListener('input', function () {
