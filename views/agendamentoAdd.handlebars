                                                    {{#each pessoasJuridicas}}
                                                    <option value="{{cd_pessoa_juridica}}">{{nm_fantasia}}</option>
                                                    {{/each}}
                                                </select>
                                            </div>
                                        </div>

                                        <!-- Endereço -->
