                                            </div>
                                        </div>

                                        <!-- CEP -->
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="fw-bold">CEP</label>
                                                <input type="text" class="form-control" name="nr_cep" id="cep"
                                                    placeholder="Informe o CEP" maxlength="9">
                                            </div>
                                        </div>

                                        <!-- Cidade -->
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="fw-bold">Cidade</label>
                                                <select class="form-control" name="cd_cidade">
                                                    <option value="">Selecione uma cidade</option>
                                                    {{#each cidades}}
                                                    <option value="{{cd_cidade}}">{{nm_cidade}}</option>
                                                    {{/each}}
                                                </select>
                                            </div>
                                        </div>

                                        <!-- Bairro -->
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="fw-bold">Bairro</label>
                                                <select class="form-control" name="cd_bairro">
                                                    <option value="">Selecione um bairro</option>
                                                    {{#each bairros}}
                                                    <option value="{{cd_bairro}}">{{nm_bairro}}</option>
                                                    {{/each}}
                                                </select>
                                            </div>
                                        </div>

