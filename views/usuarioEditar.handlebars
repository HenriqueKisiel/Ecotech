                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="fw-bold">Nome do Usuário</label>
                                                <input type="text" name="nome" value="{{usuario.nm_pessoa_fisica}}"
                                                    class="form-control" placeholder="Insira o nome " readonly>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="fw-bold">Email</label>
                                                <input type="text" name="email" value="{{usuario.ds_email}}"
                                                    class="form-control" placeholder="Novo email " required>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="fw-bold">Telefone</label>
                                                <input type="text" name="telefone"
                                                    value="{{usuario.nr_telefone_celular}}" class="form-control"
                                                    placeholder="(41) xxxxx-xxxx " required>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="fw-bold"> Usuário</label>
                                                <input type="text" name="usuario" value="{{usuario.nm_usuario}}"
                                                    class="form-control" placeholder="Usuario " readonly>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="fw-bold">Senha</label>
                                                <input type="text" name="senha" value="{{usuario.ds_senha}}"
                                                    class="form-control" placeholder="Nova senha" required>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="fw-bold">Ultima Atualização</label>
                                                <input type="text" name="Dt_atualicao"
                                                    value="{{usuario.dt_atualizacao}}" class="form-control"
                                                    placeholder="25/12/2025" readonly>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="fw-bold">Situação</label>
                                                <div class="form-check">
                                                    <input type="checkbox" class="form-check-input" id="ie_situacao" name="ie_situacao" value="A" 
                                                        {{#if (eq usuario.ie_situacao "A")}}checked{{/if}}>
                                                    <label class="form-check-label" for="ie_situacao">Ativo</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <input type="hidden" name="codigo" value="{{usuario.cd_usuario}}"
                                                class="form-control" placeholder="Insira o nome ">
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-end mt-3">
                                        <button type="submit" class="btn btn-success">
                                            Salvar
                                        </button>
                                    </div>
                                </div>
                            </div>
                    </div>
                    </form>
                </div>
            </div>
            <script>
                document.addEventListener('DOMContentLoaded', function () {
                    const form = document.getElementById('formCadastroUsuario');
                    const situacaoCheckbox = document.getElementById('ie_situacao');

                    form.addEventListener('submit', function () {
                        // Adiciona um campo oculto dinamicamente com o valor correto
                        if (!situacaoCheckbox.checked) {
                            const hiddenInput = document.createElement('input');
                            hiddenInput.type = 'hidden';
                            hiddenInput.name = 'ie_situacao';
                            hiddenInput.value = 'I'; // Valor para inativo
                            form.appendChild(hiddenInput);
                        }
                    });
                });
            </script>
