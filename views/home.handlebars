                        <script>
                            function atualizarVisibilidadeDashboard() {
                                const select = document.getElementById('selectPlanta');
                                const aviso = document.getElementById('avisoSemPlanta');
                                const dashboard = document.getElementById('dashboardPlanta');
                                if (!select.value) {
                                    aviso.classList.remove('d-none');
                                    dashboard.classList.add('d-none');
                                } else {
                                    aviso.classList.add('d-none');
                                    dashboard.classList.remove('d-none');
                                }
                            }
                            document.getElementById('selectPlanta').addEventListener('change', function () {
                                atualizarVisibilidadeDashboard();
                                const plantaId = this.value;

                                fetch(`/home/${plantaId}`)
                                    .then(res => res.json())
                                    .then(data => {
                                        if (!data.planta || !Array.isArray(data.estoques)) {
                                            throw new Error('Dados inválidos');
                                        }

                                        const planta = data.planta;
                                        const estoques = data.estoques;

                                        const total = planta.qt_capacidade_total_volume || 0;
                                        const atual = planta.qt_capacidade_atual_volume || 0;
                                        const percentual = total > 0 ? ((atual / total) * 100).toFixed(1) : 0;

                                        document.getElementById('percentual').textContent = `${percentual}%`;
                                        document.getElementById('progressBar').style.width = `${percentual}%`;

                                        let tabelaHTML = '';
                                        estoques.forEach(est => {
                                            tabelaHTML += `<tr>
                                                                <td class="fw-bold">${est.nm_estoque ?? ''}</td>
                                                                <td class="fw-bold">${est.qt_volume_total ?? 0}</td>
                                                                <td class="fw-bold">${est.qt_volume_atual ?? 0}</td>
                                                                <td class="fw-bold">${est.qt_capacidade_atual ?? 0}</td>
                                                            </tr>`;
                                        });

                                        document.getElementById('tabelaEstoques').innerHTML = tabelaHTML;
                                    })
                                    .catch(err => {
                                        console.error('Erro ao buscar dados:', err);
                                        document.getElementById('percentual').textContent = `0%`;
                                        document.getElementById('progressBar').style.width = `0%`;
                                        document.getElementById('tabelaEstoques').innerHTML = '<tr><td colspan="3">Erro ao carregar estoques</td></tr>';
                                    });
                            });

                        </script>
