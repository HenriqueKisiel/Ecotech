                    <script>
                        document.getElementById('selectPlanta').addEventListener('change', function () {
                            const plantaId = this.value;

                            fetch(`/home/${plantaId}`)
                                .then(res => res.json())
                                .then(data => {
                                    if (!data.planta || !Array.isArray(data.estoques)) {
                                        throw new Error('Dados inválidos');
                                    }

                                    const planta = data.planta;
                                    const estoques = data.estoques;

                                    const total = planta.qt_capacidade_total_kg || 0;
                                    const atual = planta.qt_capacidade_atual_kg || 0;
                                    const percentual = total > 0 ? ((atual / total) * 100).toFixed(1) : 0;

                                    document.getElementById('percentual').textContent = `${percentual}%`;
                                    document.getElementById('progressBar').style.width = `${percentual}%`;

                                    let tabelaHTML = '';
                                    estoques.forEach(est => {
                                        tabelaHTML += `<tr>
                        <td class="fw-bold">${est.nm_estoque}</td>
                        <td class="fw-bold">${est.qt_capacidade_maxima}</td>
                        <td class="fw-bold">${est.qt_disponivel}</td>
                    </tr>`;
                                    });

                                    document.getElementById('tabelaEstoques').innerHTML = tabelaHTML;
                                })
                                .catch(err => {
                                    console.error('Erro ao buscar dados:', err);
                                    document.getElementById('percentual').textContent = `0%`;
                                    document.getElementById('progressBar').style.width = `0%`;
                                    document.getElementById('tabelaEstoques').innerHTML = '<tr><td colspan="3">Erro ao carregar estoques</td></tr>';
                                });
                        });

                    </script>
                    {{!-- Start Gráficos --}}
                    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
                    <script>
                        let grafico1Instance = null;
                        let grafico2Instance = null;
                        const mesesPorExtenso = [
                            '', 'Janeiro', 'Fevereiro', 'Março', 'Abril', 'Maio', 'Junho',
                            'Julho', 'Agosto', 'Setembro', 'Outubro', 'Novembro', 'Dezembro'
                        ];
                        document.getElementById('selectPlanta').addEventListener('change', function () {
                            const plantaId = this.value;
                            fetch(`/home/graficos/${plantaId}`)
                                .then(res => res.json())
                                .then(data => {
                                    // Gráfico 1: Agendamentos por mês
                                    const ctx1 = document.getElementById('grafico1').getContext('2d');
                                    if (grafico1Instance) grafico1Instance.destroy();
                                    // Monta os labels por extenso
                                    const labelsExtenso = data.grafico1.meses.map((mes, idx) => {
                                        const ano = data.grafico1.anos[idx];
                                        return mesesPorExtenso[mes] + ' ' + ano;
                                    });
                                    grafico1Instance = new Chart(ctx1, {
                                        type: 'bar',
                                        data: {
                                            labels: labelsExtenso,
                                            datasets: [{
                                                label: 'Agendamentos por mês',
                                                data: data.grafico1.valores,
                                                backgroundColor: 'rgba(54, 162, 235, 0.7)',
                                                borderColor: 'rgba(54, 162, 235, 1)',
                                                borderWidth: 1
                                            }]
                                        },
                                        options: { scales: { y: { beginAtZero: true } } }
                                    });
                                    // Gráfico 2: Materiais diferentes agendados
                                    const ctx2 = document.getElementById('grafico2').getContext('2d');
                                    if (grafico2Instance) grafico2Instance.destroy();
                                    grafico2Instance = new Chart(ctx2, {
                                        type: 'doughnut',
                                        data: {
                                            labels: data.grafico2.labels,
                                            datasets: [{
                                                data: data.grafico2.valores,
                                                backgroundColor: [
                                                    'rgb(255, 99, 132)',
                                                    'rgb(54, 162, 235)',
                                                    'rgb(255, 205, 86)',
                                                    'rgb(75, 192, 192)',
                                                    'rgb(153, 102, 255)',
                                                    'rgb(255, 159, 64)'
                                                ]
                                            }]
                                        }
                                    });
                                });
                        });
                        window.addEventListener('DOMContentLoaded', function () {
                            grafico1Instance = new Chart(document.getElementById('grafico1').getContext('2d'), {
                                type: 'bar',
                                data: { labels: [], datasets: [{ label: 'Agendamentos por mês', data: [] }] },
                                options: { scales: { y: { beginAtZero: true } } }
                            });
                            grafico2Instance = new Chart(document.getElementById('grafico2').getContext('2d'), {
                                type: 'doughnut',
                                data: { labels: [], datasets: [{ data: [] }] }
                            });
                        });
                    </script>
