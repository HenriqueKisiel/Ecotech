                        <script>
                            let grafico3;
                            function atualizarGraficoProporcaoMovimentacoes(plantaId) {
                                if (!plantaId) return;
                                fetch(`/home/proporcaoMovimentacoes/${plantaId}`)
                                    .then(res => res.json())
                                    .then(data => {
                                        const labels = data.labels || [];
                                        const dados = data.dados || [];
                                        const backgroundColors = [
                                            'rgb(46, 139, 87)',   // entrada - verde floresta
                                            'rgba(227, 104, 98, 1)', // saída - verde pálido
                                            'rgb(50, 205, 50)'    // venda - verde lima
                                        ];

                                        if (grafico3) {
                                            grafico3.data.labels = labels;
                                            grafico3.data.datasets[0].data = dados;
                                            grafico3.data.datasets[0].backgroundColor = backgroundColors;
                                            grafico3.update();
                                        } else {
                                            const ctx3 = document.getElementById('grafico3').getContext('2d');
                                            grafico3 = new Chart(ctx3, {
                                                type: 'doughnut',
                                                data: {
                                                    labels: labels,
                                                    datasets: [{
                                                        label: 'Total de Movimentações',
                                                        data: dados,
                                                        backgroundColor: backgroundColors,
                                                        hoverOffset: 4
                                                    }]
                                                },
                                                options: {
                                                    responsive: true,
                                                    plugins: {
                                                        datalabels: {
                                                            color: '#000',
                                                            font: { weight: 'bold' },
                                                            formatter: function (value, context) {
                                                                return value;
                                                            }
                                                        },
                                                        legend: {
                                                            position: 'bottom'
                                                        }
                                                    }
                                                },
                                                plugins: [ChartDataLabels]
                                            });
                                        }
                                    });
                            }

                            document.getElementById('selectPlanta').addEventListener('change', function () {
                                const plantaId = this.value;
                                atualizarGraficoProporcaoMovimentacoes(plantaId);
                            });

                            window.addEventListener('DOMContentLoaded', function () {
                                const select = document.getElementById('selectPlanta');
                                if (select && select.value) {
