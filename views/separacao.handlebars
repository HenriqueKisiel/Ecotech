        <script>
            document.addEventListener("DOMContentLoaded", function () {
                const selectAgendamento = document.getElementById('agendamento');
                const tabelaItens = document.querySelector('.table tbody');
                const pesoSeparadoInput = document.getElementById('pesoSeparado');

                function atualizarPesoSeparado() {
                    let somaPesos = 0;
                    tabelaItens.querySelectorAll('tr').forEach(tr => {
                        const pesoItem = parseFloat(tr.children[2]?.textContent.replace(',', '.') || 0);
                        somaPesos += pesoItem;
                    });
                    pesoSeparadoInput.value = somaPesos.toFixed(2);
                }

                selectAgendamento.addEventListener('change', function () {
                    const cd_agendamento = selectAgendamento.value;
                    if (!cd_agendamento) {
                        tabelaItens.innerHTML = '';
                        pesoSeparadoInput.value = "0";
                        return;
                    }
                    fetch(`/separacao/movimentacoes?cd_agendamento=${cd_agendamento}`)
                        .then(response => response.json())
                        .then(itens => {
                            tabelaItens.innerHTML = '';
                            itens.forEach(item => {
                                const tr = document.createElement('tr');
                                tr.innerHTML = `
                        <td>${item.ds_material || ''}</td>
                        <td>${item.nm_estoque || ''}</td>
                        <td>${item.qt_peso || ''}</td>
                        <td>${item.qt_volume || ''}</td>
                    `;
                                tabelaItens.appendChild(tr);
                            });
                            atualizarPesoSeparado();
                        })
                        .catch(error => {
                            tabelaItens.innerHTML = '<tr><td colspan="4">Erro ao carregar itens.</td></tr>';
                            pesoSeparadoInput.value = "0";
                        });
                });

                // Atualiza também ao carregar a página
                if (selectAgendamento.value) {
                    selectAgendamento.dispatchEvent(new Event('change'));
                }
            });
        </script>

        <script>
            document.addEventListener("DOMContentLoaded", function () {
                const form = document.getElementById('formAdicionarItem');
                const volumeInput = document.getElementById('volume_m3');
                const volumePrensadoInput = document.getElementById('volume_m3_prensado');

                form.addEventListener('submit', function (e) {
                    const volume = parseFloat(volumeInput.value.replace(',', '.')) || 0;
                    const volumePrensado = parseFloat(volumePrensadoInput.value.replace(',', '.')) || 0;
                    const pesoReal = parseFloat(document.getElementById('pesoReal').value.replace(',', '.')) || 0;
                    const qtPeso = parseFloat(document.getElementById('qt_peso').value.replace(',', '.')) || 0;

                    // Soma dos pesos já adicionados
                    let somaPesos = 0;
                    document.querySelectorAll('.table tbody tr').forEach(tr => {
                        const pesoItem = parseFloat(tr.children[2]?.textContent.replace(',', '.') || 0);
                        somaPesos += pesoItem;
                    });

                    if (volumePrensado > volume) {
                        e.preventDefault();
                        swal("Erro!", "O volume prensado não pode ser maior que o volume calculado!", {
                            icon: "error",
                            buttons: {
                                confirm: {
                                    text: "OK",
                                    className: "btn btn-danger",
                                },
                            },
                        });
                        return;
                    }

                    if ((somaPesos + qtPeso) > pesoReal) {
                        e.preventDefault();
                        swal("Erro!", "A soma dos pesos dos itens não pode ultrapassar o peso real do agendamento!", {
                            icon: "error",
                            buttons: {
                                confirm: {
                                    text: "OK",
                                    className: "btn btn-danger",
                                },
                            },
                        });
                        return;
                    }
                });
            });
        </script>

        <script>
            document.addEventListener("DOMContentLoaded", function () {
                const btnConcluir = document.getElementById('btnConcluirSeparacao');
                const selectAgendamento = document.getElementById('agendamento');

                btnConcluir.addEventListener('click', function (e) {
                    e.preventDefault();
                    const cd_agendamento = selectAgendamento.value;
                    if (!cd_agendamento) {
                        swal("Atenção!", "Selecione um agendamento antes de concluir a separação.", {
                            icon: "warning",
                            buttons: {
                                confirm: {
                                    text: "OK",
                                    className: "btn btn-warning",
                                },
                            },
                        });
                        return;
                    }
                    swal({
                        title: "Deseja confirmar o encerramento da separação?",
                        icon: "warning",
                        buttons: {
                            cancel: {
                                text: "Não",
                                value: false,
                                visible: true,
                                className: "btn btn-secondary",
                            },
                            confirm: {
                                text: "Sim",
                                value: true,
                                visible: true,
                                className: "btn btn-primary",
                            }
                        }
                    }).then((willConfirm) => {
                        if (willConfirm) {
                            // Faz o update via fetch
                            fetch(`/separacao/concluirSeparacao?cd_agendamento=${cd_agendamento}`, {
                                method: 'POST'
                            })
                                .then(response => response.json())
                                .then(data => {
                                    if (data.success) {
                                        swal("Sucesso!", "Separação encerrada com sucesso!", {
                                            icon: "success",
                                            buttons: {
                                                confirm: {
                                                    text: "OK",
                                                    className: "btn btn-success",
                                                },
                                            },
                                        }).then(() => {
                                            window.location.href = '/separacao';
                                        });
                                    } else {
                                        swal("Erro!", data.message || "Erro ao encerrar separação.", {
                                            icon: "error",
                                            buttons: {
                                                confirm: {
                                                    text: "OK",
                                                    className: "btn btn-danger",
                                                },
                                            },
                                        });
                                    }
                                });
                        } else {
                            // Redireciona para a tela com o agendamento marcado
                            window.location.href = `/separacao?cd_agendamento=${cd_agendamento}`;
                        }
                    });
                });
            });
        </script>

