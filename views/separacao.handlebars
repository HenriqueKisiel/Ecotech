        <script>
            document.addEventListener("DOMContentLoaded", function () {
                const selectAgendamento = document.getElementById('agendamento');
                const pesoRealInput = document.getElementById('pesoReal');
                const nmPlantaInput = document.getElementById('nm_planta');
                const nmRotaInput = document.getElementById('nm_rota');

                // Carregar agendamentos para separação
                fetch('/buscarAgendamentoSeparacao')
                    .then(response => response.json())
                    .then(agendamentos => {
                        agendamentos.forEach(agendamento => {
                            const option = document.createElement('option');
                            option.value = agendamento.cd_agendamento;
                            option.textContent = agendamento.nm_agendamento;
                            option.dataset.pesoReal = agendamento.qt_peso_real;
                            option.dataset.cdPlanta = agendamento.cd_planta || '';
                            option.dataset.nmPlanta = agendamento.nm_planta || '';
                            option.dataset.nmRota = agendamento.nm_rota || '';
                            selectAgendamento.appendChild(option);
                        });

                        // Selecionar automaticamente se vier parâmetro na URL
                        const urlParams = new URLSearchParams(window.location.search);
                        const cd_agendamento = urlParams.get('cd_agendamento');
                        if (cd_agendamento) {
                            selectAgendamento.value = cd_agendamento;
                            // Dispara o evento change para atualizar os campos relacionados
                            selectAgendamento.dispatchEvent(new Event('change'));
                        }
                    })
                    .catch(error => console.error('Erro ao carregar agendamentos:', error));

                selectAgendamento.addEventListener('change', function () {
                    const selectedOption = selectAgendamento.options[selectAgendamento.selectedIndex];
                    pesoRealInput.value = selectedOption.dataset.pesoReal || '';
                    nmPlantaInput.value = selectedOption.dataset.nmPlanta || '';
                    nmRotaInput.value = selectedOption.dataset.nmRota || '';
                });
            });

            document.addEventListener("DOMContentLoaded", function () {
                const selectAgendamento = document.getElementById('agendamento');
                const cdAgendamentoHidden = document.getElementById('cd_agendamento_hidden');
                selectAgendamento.addEventListener('change', function () {
                    cdAgendamentoHidden.value = selectAgendamento.value;
                });
                cdAgendamentoHidden.value = selectAgendamento.value;
            });
        </script>

        <script>
            document.addEventListener("DOMContentLoaded", function () {
                const materiaPrimaSelect = document.getElementById('materia_prima');
                const qtPesoInput = document.getElementById('qt_peso');
                const volumeInput = document.getElementById('volume_m3');
                let volumePorKg = null;

                // Carregar materiais no select materia_prima
                fetch('/buscarMateriaisLinha5')
                    .then(response => response.json())
                    .then(materiais => {
                        materiaPrimaSelect.innerHTML = '<option value="0">Selecione a linha</option>';
                        materiais.forEach(mat => {
                            const option = document.createElement('option');
                            option.value = mat.cd_material;
                            option.textContent = mat.ds_material;
                            // Garante que o volume seja um número ou string vazia
                            option.dataset.volume = mat.volume_m3 !== null && mat.volume_m3 !== undefined ? mat.volume_m3 : '';
                            materiaPrimaSelect.appendChild(option);
                        });
                    })
                    .catch(error => console.error('Erro ao carregar materiais:', error));

                function atualizarVolume() {
                    const peso = parseFloat(qtPesoInput.value.replace(',', '.'));
                    if (volumePorKg !== null && !isNaN(peso)) {
                        volumeInput.value = (peso * volumePorKg).toFixed(5);
                    } else {
                        volumeInput.value = '';
                    }
                }

                materiaPrimaSelect.addEventListener('change', function () {
                    const selected = materiaPrimaSelect.options[materiaPrimaSelect.selectedIndex];
                    // Só faz o cálculo se o volume for válido
                    volumePorKg = selected.dataset.volume && !isNaN(selected.dataset.volume) ? parseFloat(selected.dataset.volume) : null;
                    atualizarVolume();
                });

                qtPesoInput.addEventListener('input', atualizarVolume);
            });
        </script>

