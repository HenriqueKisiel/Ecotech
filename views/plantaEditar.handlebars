            <!-- Scripts -->
            <script>
                const cdBairroSelecionado = {{ planta.cd_bairro }};
                document.addEventListener('DOMContentLoaded', function () {
                    const cidadeSelect = document.getElementById('cd_cidade');
                    const bairroSelect = document.getElementById('cd_bairro');
                    const cepInput = document.querySelector('input[name="nr_cep"]');

                    // Função para formatar o CEP (após o 5º dígito insere o traço)
                    function formatarCEP(cep) {
                        return cep.replace(/^(\d{5})(\d{3})$/, '$1-$2');
                    }

                    // Aplicar a formatação no CEP ao carregar a página
                    if (cepInput.value) {
                        cepInput.value = formatarCEP(cepInput.value);
                    }

                    // Adiciona o traço automaticamente durante a digitação
                    cepInput.addEventListener('input', function (event) {
                        let cep = cepInput.value.replace(/\D/g, '');  // Remove qualquer caractere não numérico

                        // Limita o CEP a 8 caracteres (5 primeiros + 3 últimos)
                        if (cep.length > 8) {
                            cep = cep.slice(0, 8);
                        }

                        // Adiciona o traço após o 5º caractere
                        if (cep.length > 5) {
                            cep = cep.slice(0, 5) + '-' + cep.slice(5, 8);
                        }

                        // Atualiza o valor do input
                        cepInput.value = cep;
                    });

                    function atualizarBairros() {
                        const cdCidade = cidadeSelect.value;

                        if (!cdCidade) {
                            bairroSelect.innerHTML = '<option value="">Selecione uma cidade primeiro</option>';
                            return;
                        }

                        fetch(`/planta/bairros/${cdCidade}`)
                            .then(response => response.json())
                            .then(bairros => {
                                bairroSelect.innerHTML = '<option value="">Selecione um bairro</option>';

                                bairros.forEach(bairro => {
                                    const option = document.createElement('option');
                                    option.value = bairro.cd_bairro;
                                    option.textContent = bairro.nm_bairro;

                                    if (bairro.cd_bairro == cdBairroSelecionado) {
                                        option.selected = true;
                                    }

                                    bairroSelect.appendChild(option);
                                });
                            })
                            .catch(error => {
                                console.error('Erro ao carregar bairros:', error);
                                bairroSelect.innerHTML = '<option value="">Erro ao carregar bairros</option>';
                            });
                    }

                    cidadeSelect.addEventListener('change', atualizarBairros);

                    // Atualiza os bairros caso uma cidade já esteja selecionada ao carregar a página
                    if (cidadeSelect.value) {
                        atualizarBairros();
                    }

                    // Remover o traço do CEP antes de enviar, e garantir que o CEP tem 8 números
                    document.getElementById('formCadastroPlanta').addEventListener('submit', function (event) {
                        let cepValue = cepInput.value.replace('-', ''); // Remove o traço
                        if (cepValue.length !== 8) {
                            event.preventDefault();  // Impede o envio do formulário
                            alert('O CEP precisa ter exatamente 8 números.');
                            return false;
                        }
                        cepInput.value = cepValue; // Garantir que apenas os 8 números sejam enviados
                    });
                });
            </script>
