            <!-- Script para validação extra no frontend -->
            <script>
                document.getElementById('formCadastroPlanta').addEventListener('submit', function (event) {
                    let formValid = true;

                    const nomePlanta = document.getElementsByName('nm_planta')[0].value;
                    if (nomePlanta.trim() === "") {
                        alert('O nome da planta é obrigatório.');
                        formValid = false;
                    }

                    const cep = document.getElementsByName('nr_cep')[0].value;
                    const cepPattern = /^\d{8}$/;
                    if (!cep.match(cepPattern)) {
                        alert('O CEP deve ter o formato 00000-000.');
                        formValid = false;
                    }

                    if (!formValid) {
                        event.preventDefault();
                    }
                });
            </script>

