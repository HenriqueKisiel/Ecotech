        <!--start modal-->
        <!-- Modal de Confirmação -->
        <div class="modal fade" id="excluir" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Confirmar Exclusão</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <p>Tem certeza que deseja excluir este ponto de coleta?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="button" id="btnConfirmarExclusao" class="btn btn-danger">Excluir</button>
                    </div>
                </div>
            </div>
        </div>
        <!--end modal-->
        <script>
            let pontoId = null;
            let rotaId = null;

            document.addEventListener('DOMContentLoaded', function () {
                const excluirModal = document.getElementById('excluir');

                excluirModal.addEventListener('show.bs.modal', function (event) {
                    const button = event.relatedTarget;
                    pontoId = button.getAttribute('data-id');
                    rotaId = button.getAttribute('data-rota');
                });

                document.getElementById('btnConfirmarExclusao').addEventListener('click', function () {
                    if (!pontoId) return;

                    fetch(`/excluirPonto/${pontoId}`, {
                        method: 'POST'
                    })
                        .then(response => {
                            if (response.ok) {
                                // Fecha o modal
                                const modal = bootstrap.Modal.getInstance(document.getElementById('excluir'));
                                modal.hide();
                                // Recarrega a página para atualizar a lista
                                window.location.href = `/rotaEditar/${rotaId}`;
                            } else {
                                alert('Erro ao excluir ponto!');
                            }
                        })
                        .catch(err => {
                            console.error(err);
                            alert('Erro na requisição!');
                        });
                });
            });
        </script>


