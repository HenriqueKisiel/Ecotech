                <script>
                    document.addEventListener("DOMContentLoaded", function () {
                        fetch('/buscarAgendamentos')
                            .then(response => response.json())
                            .then(agendamentos => {
                                const selectAgendamento = document.getElementById('agendamento');

                                agendamentos.forEach(agendamento => {
                                    const option = document.createElement('option');
                                    option.value = agendamento.cd_agendamento;
                                    option.textContent = agendamento.nm_agendamento;  // Corrigido
                                    option.dataset.endereco = agendamento.ds_endereco;
                                    option.dataset.peso = agendamento.qt_quantidade_prevista_kg;
                                    option.dataset.volume = agendamento.volume_agendamento;
                                    selectAgendamento.appendChild(option);
                                });

                                selectAgendamento.addEventListener('change', function () {
                                    const selectedOption = this.options[this.selectedIndex];
                                    document.getElementById('endereco').value = selectedOption.dataset.endereco || '';
                                    document.getElementById('peso').value = selectedOption.dataset.peso || '';
                                    document.getElementById('volume').value = selectedOption.dataset.volume || ''
                                    document.getElementById('codigo_agendamento').value = selectedOption.value;
                                });
                            })
                            .catch(error => console.error('Erro ao carregar agendamentos:', error));
                    });

                    document.addEventListener("DOMContentLoaded", function () {
