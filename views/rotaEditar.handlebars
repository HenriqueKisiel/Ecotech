        <script>
            let pontoId = null;
            let rotaId = null;

            document.addEventListener('DOMContentLoaded', function () {
                const excluirModal = document.getElementById('excluir');

                excluirModal.addEventListener('show.bs.modal', function (event) {
                    const button = event.relatedTarget;
                    pontoId = button.getAttribute('data-id');
                    rotaId = button.getAttribute('data-rota');
                });

                document.getElementById('btnConfirmarExclusao').addEventListener('click', function () {
                    if (!pontoId) return;

                    fetch(`/excluirPonto/${pontoId}`, {
                        method: 'POST'
                    })
                        .then(response => {
                            if (response.ok) {
                                // Fecha o modal
                                const modal = bootstrap.Modal.getInstance(document.getElementById('excluir'));
                                modal.hide();
                                // Recarrega a página para atualizar a lista
                                window.location.href = `/rotaEditar/${rotaId}`;
                            } else {
                                alert('Erro ao excluir ponto!');
                            }
                        })
                        .catch(err => {
                            console.error(err);
                            alert('Erro na requisição!');
                        });
                });
            });

            //FAZ A VALIDAÇÃO DE PESO E VOLUME
            document.addEventListener('DOMContentLoaded', function () {
                const form = document.querySelector('form[action^="/rotaEditar/"]');
                if (!form) return;

                form.addEventListener('submit', function (e) {
                    const pesoAtual = parseFloat((document.querySelector('input[value="{{rotas.qt_peso_total_kg}}"]')?.value || '0').replace(',', '.')) || 0;
                    const volumeAtual = parseFloat((document.querySelector('input[value="{{rotas.volume_rota}}"]')?.value || '0').replace(',', '.')) || 0;
                    const capacidadePeso = parseFloat((document.querySelector('input[value="{{rotas.capacidade_kg}}"]')?.value || '0').replace(',', '.')) || 0;
                    const capacidadeVolume = parseFloat((document.getElementById('capacidade_m3')?.value || '0').replace(',', '.')) || 0;

                    const pesoNovo = parseFloat((document.getElementById('peso')?.value || '0').replace(',', '.')) || 0;
                    const volumeNovo = parseFloat((document.getElementById('volume')?.value || '0').replace(',', '.')) || 0;

                    let mensagem = '';
                    if ((pesoAtual + pesoNovo) > capacidadePeso) {
                        mensagem = 'O peso total da rota excede a capacidade do caminhão!';
                    } else if ((volumeAtual + volumeNovo) > capacidadeVolume) {
                        mensagem = 'O volume total da rota excede a capacidade de volume do caminhão!';
                    }

                    if (mensagem) {
                        e.preventDefault();
                        document.getElementById('modalAvisoMensagem').textContent = mensagem;
                        const avisoModal = new bootstrap.Modal(document.getElementById('modalAviso'));
                        avisoModal.show();
                        return false;
                    }
                });

                // VALIDA APENAS LETRAS
                const nomeRotaInput = document.querySelector('input[name="nome"]');
                if (nomeRotaInput) {
                    nomeRotaInput.addEventListener('input', function () {
                        // Aceita apenas letras, números e hífen
                        this.value = this.value.replace(/[^a-zA-Z0-9\-]/g, '');
                    });
                }




            });
        </script>



