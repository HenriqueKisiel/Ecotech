                    swal("Erro!", "Erro ao cancelar ponto.", {
                        icon: "error",
                        buttons: {
                            confirm: {
                                text: "OK",
                                className: "btn btn-danger",
                            },
                        },
                    });
                }
            } catch (error) {
                console.error('Erro na requisição:', error);
                swal("Erro!", "Erro na comunicação com o servidor.", {
                    icon: "error",
                    buttons: {
                        confirm: {
                            text: "OK",
                            className: "btn btn-danger",
                        },
                    },
                });
            }
        });
    });

    // Formatar datas (mantém seu script de formatação)
    const formatarData = (dataString) => {
        if (!dataString || dataString === "_____" || dataString === "Na/Na/Na") return "_____";
        const data = new Date(dataString);
        if (isNaN(data)) return "_____";
        const dia = String(data.getDate()).padStart(2, '0');
        const mes = String(data.getMonth() + 1).padStart(2, '0');
        const ano = String(data.getFullYear()).slice(-2);
        return `${dia}/${mes}/${ano}`;
    };

    const inputDtInicio = document.querySelector('input[name="dt_inicio"]');
