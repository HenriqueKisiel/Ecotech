        <script>
document.addEventListener("DOMContentLoaded", function () {
    // Iniciar rota
    const btnIniciar = document.getElementById('btn-iniciar');
    if (btnIniciar) {
        btnIniciar.addEventListener('click', async () => {
            const cdRota = {{rotas.cd_rota}};
            try {
                const response = await fetch(`/attStatus/${cdRota}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ acao: 'iniciar' })
                });

                const result = await response.json();
                if (result.success) {
                    swal("Início registrado!", "A coleta foi iniciada com sucesso!", {
                        icon: "success",
                        buttons: {
                            confirm: {
                                text: "OK",
                                className: "btn btn-success",
                            },
                        },
                    }).then(() => {
                        window.location.href = `/attStatus/${cdRota}`;
                    });
                } else if (result.motoristaCaminhao) {
                    swal("Atenção!", "É necessário vincular um motorista e um caminhão à rota antes de iniciar.", {
                        icon: "warning",
                        buttons: {
                            confirm: {
                                text: "Entendi",
                                className: "btn btn-warning",
                            },
                        },
                    });
                } else if (result.iniciado) {
                    swal("Atenção!", "Não é possível iniciar a rota pois ela já iniciou.", {
                        icon: "warning",
                        buttons: {
                            confirm: {
                                text: "Entendi",
                                className: "btn btn-warning",
                            },
                        },
                    });
                } else {
                    swal("Erro!", "Não foi possível registrar o início.", {
                        icon: "error",
                        buttons: {
                            confirm: {
                                text: "Fechar",
                                className: "btn btn-danger",
                            },
                        },
                    });
                }
            } catch (error) {
                console.error('Erro na requisição:', error);
                swal("Erro!", "Erro na comunicação com o servidor.", {
                    icon: "error",
                    buttons: {
                        confirm: {
                            text: "Fechar",
                            className: "btn btn-danger",
                        },
                    },
                });
            }
        });
    }

    // Finalizar rota
    const btnFinalizar = document.getElementById('btn-finalizar');
    if (btnFinalizar) {
        btnFinalizar.addEventListener('click', async () => {
            const cdRota = {{rotas.cd_rota}};
            try {
                const response = await fetch(`/attStatus/${cdRota}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ acao: 'finalizar' })
                });

                const result = await response.json();
                if (result.success) {
                    swal("Rota Finalizada com sucesso!", "A coleta foi finalizada com sucesso!", {
                        icon: "success",
                        buttons: {
                            confirm: {
                                text: "OK",
                                className: "btn btn-success",
                            },
                        },
                    }).then(() => {
                        window.location.href = `/attStatus/${cdRota}`;
                    });
                } else if (result.coletado) {
                    swal("Atenção!", "Não é possível finalizar a rota pois existem agendamentos a serem coletados.", {
                        icon: "warning",
                        buttons: {
                            confirm: {
                                text: "Entendi",
                                className: "btn btn-warning",
                            },
                        },
                    });
                } else if (result.jaFinalizada) {
                    swal("Atenção!", "Esta rota já foi finalizada.", {
                        icon: "warning",
                        buttons: {
                            confirm: {
                                text: "Entendi",
                                className: "btn btn-warning",
                            },
                        },
                    });
                } else if (result.motoristaCaminhao) {
                    swal("Atenção!", "É necessário vincular um motorista e um caminhão à rota para finalizar.", {
                        icon: "warning",
                        buttons: {
                            confirm: {
                                text: "Entendi",
                                className: "btn btn-warning",
                            },
                        },
                    });
                } else {
                    swal("Erro!", "Não foi possível registrar o término.", {
                        icon: "error",
                        buttons: {
                            confirm: {
                                text: "Fechar",
                                className: "btn btn-danger",
                            },
                        },
                    });
                }
            } catch (error) {
                console.error('Erro na requisição:', error);
                swal("Erro!", "Erro na comunicação com o servidor.", {
                    icon: "error",
                    buttons: {
                        confirm: {
                            text: "Fechar",
                            className: "btn btn-danger",
                        },
                    },
                });
            }
        });
    }

    // Coletar ponto
    document.querySelectorAll('.btn-coletar').forEach(btn => {
        btn.addEventListener('click', async (e) => {
            const cdAgendamento = btn.getAttribute('data-cd-agendamento');
            try {
                const response = await fetch(`/atualizarAgendamento/${cdAgendamento}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ acao: 'coletar' })
                });
