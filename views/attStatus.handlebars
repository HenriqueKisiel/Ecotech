                                text: "Entendi",
                                className: "btn btn-warning",
                            },
                        },
                    });
                } else if (result.jaColetado) {
                    swal("Atenção!", "Este ponto já foi coletado.", {
                        icon: "warning",
                        buttons: {
                            confirm: {
                                text: "Entendi",
                                className: "btn btn-warning",
                            },
                        },
                    });
                } else if (result.pontoCancelado) {
                    swal("Atenção!", "Não é possível coletar um ponto cancelado.", {
                        icon: "warning",
                        buttons: {
