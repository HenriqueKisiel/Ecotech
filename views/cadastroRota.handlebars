                <script>
                    document.addEventListener("DOMContentLoaded", function () {
                        // Definir o mínimo da data para hoje
                        const inputData = document.getElementById('dataAgendaRota');
                        const hoje = new Date();
                        const yyyy = hoje.getFullYear();
                        const mm = String(hoje.getMonth() + 1).padStart(2, '0');
                        const dd = String(hoje.getDate()).padStart(2, '0');
                        const dataMin = `${yyyy}-${mm}-${dd}`;
                        inputData.min = dataMin;

                        // Validação extra no submit
                        document.getElementById('formRotaCadastro').addEventListener('submit', function (e) {
                            if (inputData.value < dataMin) {
                                alert('A Data Agendada não pode ser anterior a hoje.');
                                e.preventDefault();
                            }
                        });

                        fetch('/buscarPlanta')
                            .then(response => response.json())
                            .then(planta => {  // Corrigido o nome da variável
                                const selectPlanta = document.getElementById('Planta'); // Corrigido o ID para maiúsculo

                                planta.forEach(planta => {  // Corrigido o loop
                                    const option = document.createElement('option');
                                    option.value = planta.cd_planta;
                                    option.textContent = planta.nm_planta;
                                    selectPlanta.appendChild(option);
                                });
                            })
                            .catch(error => console.error('Erro ao carregar Plata:', error));
                        const nomeRotaInput = document.querySelector('input[name="nomeRota"]');
                        if (nomeRotaInput) {
                            nomeRotaInput.addEventListener('input', function () {
                                // Aceita apenas letras, números e hífen
                                this.value = this.value.replace(/[^a-zA-Z0-9\-]/g, '');
                            });
                        }

                    });
                </script>

